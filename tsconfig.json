{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "ES2021",
        "paths": {
            "cypress-interceptor": ["./packages/interceptor"],
            "cypress-interceptor-server": ["./packages/server"],
            "cypress-interceptor-share": ["./packages/share"]
        },
        "skipLibCheck": true
    },
    "exclude": ["./packages/interceptor/**/*.d.ts"]
}
